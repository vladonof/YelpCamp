<% include ../partials/header %>



  <header class="jumbotron">
    <div class = "conainer">
      <h1>Welcome to YelpCamp!</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
         <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
      </p>
    </div>
  </header>
  
  <div class="row">
    <div class="col-lg-12">
      <!--<h3>Our Most Popular Campgrounds!</h3>-->
    </div>
  </div>
  
  <div class="row">
    <% for(var i = 0; i < campgrounds.length; i++){ %>
      <div class="col-md-3 col-sm-6">
        <div class="img-thumbnail">
          <img class="img-fluid" src="<%= campgrounds[i].image %>">
          <div class="caption text-center">
            <h4><%= campgrounds[i].name %></h4>
          </div>
          <p>
            <a href="/campgrounds/<%=campgrounds[i]._id%>" class="btn btn-primary btn-block">More Info</a>
          </p>
        </div>
      </div>
    <% } %>
  </div>



<% include ../partials/footer %>